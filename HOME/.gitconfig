[core]
    editor = vim
    autocrlf = input
    filemode = false
[commit]
    gpgsign = true
[color]
    ui = true
[pull]
    ff = only
    rebase = false
[fetch]
    prune = false
[rebase]
    autoStash = false
[alias]
    acm = ! git add -A && git commit -m
    alias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
    amend = commit -a --amend
    cm = commit -m
    a = add
    ai = add --interactive
    b = branch
    br = branch --remote
    cb = checkout -B
    co = checkout
    d = diff
    ds = diff --staged
    l = log --pretty='format:%C(yellow)%h %C(magenta)%as %C(blue)%aL %C(cyan)%s%C(reset)'
    main = checkout main
    master = checkout master
    pub = !git push --set-upstream origin $(git rev-parse --abbrev-ref HEAD)
    ruo = remote update origin --prune # update local list of remote branches
    s = status
    # resets the previous commit but
    # keep all the changes from that commit in the working directory
    undo = reset HEAD~1 --mixed
[merge]
    tool = vscode
[mergetool "vscode"]
    cmd = code --wait $MERGED
[diff]
    tool = vscode
[gpg]
    program = gpg
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
[interactive]
    diffFilter = delta --color-only --features=interactive
[delta]
    features = decorations
    syntax-theme = Dracula
    keep-plus-minus-markers = true
    line-numbers = true
    line-number-right-style = green
[delta "interactive"]
    keep-plus-minus-markers = false
[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax
[credential "https://github.com"]
	helper = !/usr/bin/gh auth git-credential
[includeIf "gitdir:~/ccb012100/"]
    # set all repos in ~/ccb012100 to use personal username/email
    path = ~/ccb012100/.gitconfig
[includeIf "gitdir:~/repos/"]
    # set all repos in ~/repos to use work username/email
    path = ~/repos/.gitconfig
